
@{
    ViewData["Title"] = "Top";
}

<h1>Top</h1>
<table class="table table-bordered table-striped table-sm" data-toggle="bootstrap-table" id="maintable"></table>

@section Scripts
{
    <script>
        $(function () {
            $('#maintable').bootstrapTable({
                pageSize: 50,
                pageList: [50, 100, 150, 200, 500],
                pagination: true,
                sidePagination: 'server',
                search: true,
                url: "/GetTop",
                columns: [
                    [
                        {
                            field: 'place',
                            title: '#',
                            width: 32,
                            align: 'center'
                        }, {
                            title: 'Player',
                            field: 'name',
                            sortable: true,
                            align: 'center',
                            formatter: formatPlayerName
                        }, {
                            title: 'Live PP',
                            field: 'livePP',
                            sortable: true,
                            align: 'center'
                        }, {
                            title: 'Local PP',
                            field: 'localPP',
                            sortable: true,
                            align: 'center'
                        }, {
                            title: 'PP Change',
                            field: 'ppLoss',
                            sortable: true,
                            align: 'center'
                        }
                    ]
                ]
            });

            function formatPlayerName(value, row, index) {
                return "<a href=\"/user/" + row.jsonName + "\">" + value + "</a>";
            }
        });
    </script>
}