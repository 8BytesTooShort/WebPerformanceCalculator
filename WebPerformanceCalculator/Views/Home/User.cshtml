@model WebPerformanceCalculator.Models.UserModel
@{
    ViewData["Title"] = @Model.Username;
}
<nav class="navbar navbar-expand-sm navbar-light bg-light">
    <a class="navbar-brand" href="/">delta_t Rebalance Calculator</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/Top">Leaderboard</a>
            </li>
            <li class="nav-item"><a class="nav-link disabled" href="#">/</a></li>
            <li class="nav-item active">
                <a class="nav-link" href="#">@Model.Username <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Highscores">Highscores</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Map">Calculate map PP</a>
            </li>

        </ul>
    </div>
</nav>

<div class="pt-2 pb-2">
    <h1 id="username">@Model.Username</h1>
    <div><b>Updated on:</b> @Model.UpdateDate</div>
    <div><b>Live PP:</b><div id="livePP"></div></div>
    <div><b>Local PP:</b><div id="localPP"></div></div>
    <table class="table table-bordered table-striped table-sm" data-toggle="bootstrap-table" id="maintable"></table>
</div>
@section Scripts
{
    <script>
        $(function () {
            $.ajax({
                type: 'GET',
                url: "/GetResults?jsonUsername=@Model.Username",
                complete: function (d) {
                    var json = JSON.parse(d.responseJSON);

                    $('#livePP').html(json.LivePP);
                    $('#localPP').html(json.LocalPP);
                    $('#username').html(json.Username);

                    json.Beatmaps.forEach(function (item, i, arr) {
                        var split = item.Beatmap.split(' - ');
                        var beatmapId = split[0];
                        split.splice(0, 1);
                        json.Beatmaps[i].Beatmap = '<a href=\"https://osu.ppy.sh/b/'+ beatmapId +'\">' + split.join(' - ') + '</a>';
                    });

                    $('#maintable').bootstrapTable('load', json.Beatmaps);
                }
            });

            $('#maintable').bootstrapTable({
                columns: [
                    [
                        {
                            formatter: runningFormatter,
                            title: '#',
                            width: 32,
                            align: 'center'
                        }, {
                            title: 'Beatmap',
                            field: 'Beatmap'
                        }, {
                            title: 'Live PP',
                            field: 'LivePP',
                            sortable: true,
                            align: 'center'
                        }, {
                            title: 'Local PP',
                            field: 'LocalPP',
                            sortable: true,
                            align: 'center'
                        }, {
                            title: 'PP Change',
                            field: 'PPChange',
                            sortable: true,
                            align: 'center'
                        }, {
                            title: 'Position change',
                            field: 'PositionChange',
                            sortable: true,
                            align: 'center'
                        }
                    ]
                ]
            });
        });
        function runningFormatter(value, row, index) {
            return index+1;
        }
    </script>
}
